{
  "name": "@boranseckin/ts-init",
  "version": "1.0.9",
  "description": "CLI for initializing a TypeScript project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js",
    "start:dev": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "docs": "typedoc -out docs ./src"
  },
  "bin": {
    "ts-init": "bin/ts-init"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [],
  "author": "Boran Seckin <me@boranseckin.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/boranseckin/ts-init.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "homepage": "https://github.com/boranseckin/ts-init",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "docs"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "figlet": "^1.5.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^8.1.1",
    "@types/inquirer": "^6.5.0",
    "@types/lodash": "^4.14.159",
    "@types/node": "^13.13.15",
    "@types/npm": "^2.0.31",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
